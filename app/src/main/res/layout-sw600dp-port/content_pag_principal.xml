<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fondodepantalla">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="580dp"
            android:layout_height="690dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

            <Button
                android:layout_width="250dp"
                android:layout_height="100dp"               android:text="@string/botn4"
                android:id="@+id/button4"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="10dp"
                android:background="#f0ffa61a"
                android:textColor="#fbf9f9"
                android:textSize="@dimen/text_size_standard"
                />

            <Button
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:text="@string/botn"
                android:id="@+id/button"
                android:layout_marginTop="260dp"
                android:layout_marginLeft="35dp"
                android:background="#f0b45400"
                android:textColor="#fbf9f9"
                android:textSize="@dimen/text_size_standard"
                />

            <Button
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:text="@string/botn2"
                android:id="@+id/button2"
                android:layout_marginTop="390dp"
                android:layout_marginLeft="10dp"
                android:background="#f0ffa61a"
                android:textColor="#fbf9f9"
                android:textSize="@dimen/text_size_standard"
                />

            <Button
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:text="@string/botn3"
                android:id="@+id/button3"
                android:layout_marginTop="520dp"
                android:layout_marginLeft="35dp"
                android:background="#f0b45400"
                android:textColor="#fbf9f9"
                android:textSize="@dimen/text_size_standard"
                />
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>